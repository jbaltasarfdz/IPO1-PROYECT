        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="194.4,82,0,0" TextWrapping="Wrap" Text="Usuario" VerticalAlignment="Top" Width="120"/>
